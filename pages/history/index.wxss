/* 页面容器 */
.history-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

/* 顶部操作栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #ff4d4f;
  padding: 10rpx 20rpx;
}

/* 搜索框 */
.search-box {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  background-color: transparent;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  opacity: 0;
  transition: opacity 0.3s;
}

.clear-icon.show {
  opacity: 1;
}

/* 会话列表 */
.session-list {
  flex: 1;
  overflow: hidden;
}

/* 会话项 */
.session-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s;
}

.session-item:active {
  background-color: #f5f5f5;
}

/* 会话图标 */
.session-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #e6f7ff;
}

.session-icon image {
  width: 100%;
  height: 100%;
}

/* 会话信息 */
.session-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.session-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.session-time {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 暂无数据 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  color: #999;
  font-size: 28rpx;
} 